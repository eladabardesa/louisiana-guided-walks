// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id           String   @id @default(cuid())
  selectedDate String
  fullName     String
  email        String
  phone        String?
  note         String?
  newsletter   Boolean  @default(false)
  createdAt    DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}
